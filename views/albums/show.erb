<h1><%= @album.title %> (<%= @album.year %>)</h1>
<img class="album" src="<%= @album.image_path %>" alt="<%= @album.title %>">
<h2><%= @album.musicians.join(' / ') %></h2>
<ul>
	<% @songs.each do |song| %>
		<li>
			<%= song.track_num %>. <%= song.title %>  <%= song.time %>
		</li>
	<% end %>
</ul>
<% @album.sample_paths.each do |sample_path| %>
	<audio src="<%= sample_path %>" controls preload="auto"></audio>
<% end %>
